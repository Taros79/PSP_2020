<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>

<BorderPane fx:id="pantallaPrincipal" prefHeight="600.0" prefWidth="800.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controllers.Principal_1">
        <center>
                <ImageView fx:id="imagenBienvenida" fitHeight="400.0" fitWidth="800.0" layoutX="436.0" layoutY="198.0" pickOnBounds="true" preserveRatio="true">
                        <image>
                                <Image url="https://imagenesfrasesbonitas.com/wp-content/uploads/2020/04/memes-cuatentena-Covid-19-3.jpg" />
                        </image>
                </ImageView>
        </center>
        <top>
                <MenuBar BorderPane.alignment="CENTER">
                        <menus>
                                <Menu mnemonicParsing="false" text="Create">
                                        <items>
                                                <MenuItem mnemonicParsing="false" onAction="#abrirCrearUsuario" text="Crear Usuario" />
                                        </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Update">
                                        <items>
                                                <MenuItem mnemonicParsing="false" onAction="#abrirActualizarUsuario" text="Actualizar Usuario" />
                                        </items>
                                </Menu>
                                <Menu mnemonicParsing="false" text="Delete">
                                        <items>
                                                <MenuItem mnemonicParsing="false" onAction="#cargarBorrarUsuario" text="Borrar Usuario" />
                                        </items>
                                </Menu>
                        </menus>
                </MenuBar>
        </top>
</BorderPane>
