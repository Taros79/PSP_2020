<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<BorderPane fx:id="pantallaPrincipal" prefHeight="450.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/11.0.2"
            xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="org.example.ModuloCliente.gui.controllers.FXMLPrincipalController">
    <top>
        <MenuBar fx:id="fxMenuTop">
            <Menu text="Menu">
                <items>
                    <MenuItem fx:id="menuInicioSesion" mnemonicParsing="false" onAction="#iniciarSesion"
                              text="Iniciar" visible="true"/>
                    <MenuItem mnemonicParsing="false" onAction="#registrarUsuario"
                              text="Registrarse"/>
                </items>
            </Menu>

            <Menu text="Registrarse">
                <items>
                    <MenuItem mnemonicParsing="false" onAction="#registrarUsuario" text="Registrarse"/>
                    <MenuItem mnemonicParsing="false" onAction="#registrarEquipo" text="Registro Equipos"/>
                    <MenuItem mnemonicParsing="false" onAction="#resultadoPartidos" text="Resultado Partidos"/>
                </items>

            </Menu>

        </MenuBar>
    </top>
    <center>
        <Label layoutX="172.0" layoutY="116.0" text="Welcome to my API " textFill="#000000a1">
            <font>
                <Font size="36.0"/>
            </font>
        </Label>
    </center>
</BorderPane>
